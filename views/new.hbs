<div class="d-flex justify-content-center">
  <h2 class="bg-info m-3 p-1 rounded">Create a record</h2>
</div>

<form action="/records" method="POST" novalidate class="needs-validation">

  <div>
    <label for="name" class="m-1">
      <i class="fa-solid fa-utensils"></i>
      <span class="ms-2">Name:</span>
    </label>
    <input id="name" class="m-2 form-control" type="text" placeholder="中文名稱" name="name" required />
    <div class="valid-feedback">
      <span class="d-flex justify-content-center">Looks good!</span>
    </div>
    <div class="invalid-feedback">
      <span class="d-flex justify-content-center">餐廳中文名稱必填</span>
    </div>

    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-info btn-lg m-2">Create</button>
      <a href="/">
        <button type="button" class="btn btn-info btn-lg m-2">返回首頁</button>
      </a>
    </div>
  </div>

</form>

<form action="/restaurants" method="POST" novalidate class="needs-validation">

  <div>
    <label for="name" class="m-1">
      <i class="fa-solid fa-utensils"></i>
      <span class="ms-2">餐廳中文名稱：</span>
    </label>
    <input id="name" class="m-2 form-control" type="text" placeholder="中文名稱" name="name" required />
    <div class="valid-feedback">
      <span class="d-flex justify-content-center">Looks good!</span>
    </div>
    <div class="invalid-feedback">
      <span class="d-flex justify-content-center">餐廳中文名稱必填</span>
    </div>
  </div>

  <div>
    <label for="name_en" class="m-1">
      <i class="fa-solid fa-language"></i>
      <span class="ms-2">餐廳英文名稱：</span>
    </label>
    <input id="name_en" class="m-2 form-control" type="text" placeholder="English name" name="name_en" required />
    <div class="valid-feedback">
      <span class="d-flex justify-content-center">Looks good!</span>
    </div>
    <div class="invalid-feedback">
      <span class="d-flex justify-content-center">餐廳英文名稱必填</span>
    </div>
  </div>

  <div>
    <label for="restaurantCategory" class="m-1">
      <i class="fa-solid fa-globe"></i>
      <span class="ms-2">餐廳分類：</span>
    </label>
    <input class="m-2 form-control" type="text" list="restaurantCategories" id="restaurantCategory" name="category"
      placeholder="Type or choose category from Dropdowns" required />
    <datalist id="restaurantCategories">
      <option value="中東料理" />
      <option value="日本料理" />
      <option value="義式餐廳" />
      <option value="美式" />
      <option value="酒吧" />
      <option value="咖啡" />
    </datalist>
    <div class="valid-feedback">
      <span class="d-flex justify-content-center">Looks good!</span>
    </div>
    <div class="invalid-feedback">
      <span class="d-flex justify-content-center">餐廳分類必填</span>
    </div>
  </div>


  <label for="image" class="m-1">
    <i class="fa-solid fa-camera-retro"></i>
    <span class="ms-2">餐廳照片：</span>
  </label>
  <input id="image" class="m-2 form-control" type="text" placeholder="圖片網址 https://" name="image" />

  <div>
    <label for="location" class="m-1">
      <i class="fa-solid fa-location-dot"></i>
      <span class="ms-2">餐廳地址：</span>
    </label>
    <input id="location" class="m-2 form-control" type="text" placeholder="OO市OO區..." name="location" required />
    <div class="invalid-feedback">
      <span class="d-flex justify-content-center">餐廳地址必填</span>
    </div>
    <div class="valid-feedback">
      <span class="d-flex justify-content-center">Looks good!</span>
    </div>
  </div>

  <label for="phone" class="m-1">
    <i class="fa-solid fa-phone-volume"></i>
    <span class="ms-2">餐廳電話：</span>
  </label>
  <input id="phone" class="m-2 form-control" type="tel" placeholder="882 5252" name="phone" />

  <div>
    <label for="google_map" class="m-1">
      <i class="fa-solid fa-map"></i>
      <span class="ms-2">Google Map 網址：</span>
    </label>
    <input id="google_map" class="m-2 form-control" type="text" placeholder="https://www.google.com.tw/maps/place/..."
      name="google_map" required />
    <div class="invalid-feedback">
      <span class="d-flex justify-content-center">Google Map 網址必填</span>
    </div>
    <div class="valid-feedback">
      <span class="d-flex justify-content-center">Looks good!</span>
    </div>
  </div>

  <div class="mx-1 my-3">
    <label for="rating">
      <i class="fa-solid fa-ranking-star"></i>
      <span class="ms-2">餐廳評分：</span>
    </label>
    <input type="range" min="0" max="5" value="4" step="0.1" name="rating" id="rating"
      oninput="document.getElementById('showRating').textContent=value"
      onchange="document.getElementById('showRating').textContent=value" />
    <span id="showRating">4.0</span>
  </div>

  <label for="description" class="m-1">
    <i class="fa-solid fa-baby-carriage"></i>
    <span class="ms-2">餐廳描述：</span>
  </label>
  <textarea id="description" class="m-2 form-control" type="text" placeholder="可以帶貓狗嗎？如何收費？" rows="3" cols="40"
    name="description"></textarea>

  <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-info btn-lg m-2">Create</button>
    <a href="/">
      <button type="button" class="btn btn-info btn-lg m-2">返回首頁</button>
    </a>
  </div>
</form>

<script>
  (function () {
    'use strict'

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll('.needs-validation')

    // Loop over them and prevent submission
    Array.prototype.slice.call(forms)
      .forEach((form) => {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) { // 沒通過驗證
            // 阻止瀏覽器發送表單
            event.preventDefault()
            event.stopPropagation()
          }
          // 有加上 was-validated class 的 <form> 會顯示 valid-feedback 或 invalid-feedback
          form.classList.add('was-validated')
        }, false)
      })
  })()
</script>