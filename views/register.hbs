<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>

      {{> message}}

      <form action="/users/register" method="POST">

        <div class="mb-3">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="name..." value="{{ body.name }}">
        </div>

        <div class="mb-3">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="email..."
            value="{{ body.email }}">
        </div>

        <div class="mb-3">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="password..."
            value="{{ body.password }}">
        </div>

        <div class="mb-3">
          <label for="confirmPassword">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="password again..." value="{{ body.confirmPassword }}">
        </div>

        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary">Register</button>
          <a href="/auth/facebook" class="btn btn-info">Facebook Register</a>
        </div>
      </form>
      <p class="lead mt-4">
        Have An Account? <a href="/users/login">Login</a>
      </p>
      <p>You don't need to register again.</p>
    </div>
  </div>
</div>