{{!-- category Dropdowns --}}
<div class="d-flex justify-content-end my-5 ">
  <div class=" margin0" style="width: 70%">
    <div class=" padding0" style="width: 62%">

      <div class="btn-group" style="width: 100%">

        <button type="button" class="d-flex btn btn-warning dropdown-toggle" data-bs-toggle="dropdown"
          aria-expanded="false">
          <span class="text-dark" style="font-size: 1.2vw">
            {{#if selectedCategory}}
            {{selectedCategory}}
            {{else}}
            類別
            {{/if}}
          </span>
        </button>

        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="./home">家居物業</a></li>
          <li><a class="dropdown-item" href="./transport">交通出行</a></li>
          <li><a class="dropdown-item" href="./recreation">休閒娛樂</a></li>
          <li><a class="dropdown-item" href="./food">餐飲食品</a></li>
          <li><a class="dropdown-item" href="./other">其他</a></li>
          <li><a class="dropdown-item" href="./all">全部類別</a></li>
        </ul>

      </div>

    </div>
    {{!-- <div class="col-4 "></div> --}}
  </div>
</div>

{{!-- totalAmount --}}
<div class="d-flex justify-content-end mb-3">
  <div class="margin0" style="width: 70%">
    <div class="padding0">

      <div class="row" style="width: 64%">
        <div class="col-4 d-flex">
          <span style="font-size: 1.7vw">總金額 :</span>
        </div>
        <div class="col-8 d-flex flex-row-reverse">
          <span class="text-secondary" style="font-size: 6vw">{{totalAmount}}</span>
        </div>
      </div>
    </div>
  </div>

</div>

{{!-- expenses list --}}
<div class="d-flex justify-content-end">
  <table class="table table-striped bg-primary bg-opacity-75" style="width: 70%">
    <tbody>
      {{#each records}}
      <tr class="">
        {{allCat}}
        <th class="align-middle">
          <div class="d-flex justify-content-center" style="font-size: 4vw">

            <i class="text-warning {{this.fontawesomeStr}}"></i>

          </div>
        </th>

        <td class="pb-3">
          <div style="font-size: 2vw">{{this.name}}</div>
          <div style="font-size: 1vw">{{this.formattedDate}}</div>
        </td>

        <td class="align-middle" style="font-size: 2vw">
          <div class="d-flex justify-content-end me-5">
            <span>{{this.amount}}</span>
          </div>
        </td>

        <td class="bg-body align-middle ">
          <a class="text-decoration-none d-flex justify-content-end align-items-center"
            href="./records/{{this._id}}/edit" style="font-size: 1.5vw">
            <span class="me-2">修改</span>
            <i class="fa-solid fa-file-pen"></i>
          </a>
        </td>

        <td class="bg-body align-middle">

          <form action="./records/{{ this._id }}?_method=DELETE" method="POST" class="d-flex align-items-center"
            style="font-size: 1.5vw">
            <button type="submit" class="btn btn-outline-none" style="font-size: 1.5vw">
              刪除
              <i class="fa-solid fa-trash-arrow-up"></i>
            </button>

          </form>
        </td>

      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{!-- go to new.hbs --}}
<div class="d-flex justify-content-end my-5">
  <div class="row" style="width: 70%">
    <div class="col-6 d-flex justify-content-center">
      <a class="btn btn-secondary" href="/records/new" style="width: 70%; font-size: 1.5vw">新增支出</a>
    </div>
    <div class="col-6 "></div>
  </div>
</div>