  <div class=" margin0" style="width: 70%">
    <div class=" padding0" style="width: 62%">

      <div class="btn-group" style="width: 100%">

        <span type="button" class="d-flex btn btn-warning" data-bs-toggle="dropdown" aria-expanded="false">
          <span class="text-dark" style="font-size: 1.2vw">
            類別
          </span>
        </span>
        <button type="button"
          class="btn btn-warning dropdown-toggle dropdown-toggle-split d-flex flex-row-reverse align-items-center text-dark"
          data-bs-toggle="dropdown" aria-expanded="false">
          <span class="visually-hidden">Toggle Dropdown</span>
        </button>

        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="#">家居物業</a></li>
          <li><a class="dropdown-item" href="#">交通出行</a></li>
          <li><a class="dropdown-item" href="#">休閒娛樂</a></li>
          <li><a class="dropdown-item" href="#">餐飲食品</a></li>
          <li><a class="dropdown-item" href="#">其他</a></li>
        </ul>

      </div>

    </div>
    {{!-- <div class="col-4 "></div> --}}
  </div>
</div>

{{!-- totalAmount --}}
<div class="d-flex justify-content-end mb-3">
  <div class="margin0" style="width: 70%">
    <div class="padding0">

      <div class="row" style="width: 64%">
        <div class="col-4 d-flex">
          <span style="font-size: 1.7vw">總金額 :</span>
        </div>
        <div class="col-8 d-flex flex-row-reverse">
          <span class="text-secondary" style="font-size: 6vw">{{totalAmount}}</span>
        </div>
      </div>
    </div>
  </div>

</div>

{{!-- expenses list --}}
<div class="d-flex justify-content-end">
  <table class="table table-striped bg-primary bg-opacity-75" style="width: 70%">
    <tbody>
      {{#each records}}
      <tr class="">

        <th class="align-middle">
          <div class="d-flex justify-content-center">
            {{#is this.categoryId 1}}
            <i class="text-warning fa-solid fa-house" style="font-size: 5vw"></i>{{/is}}
            {{#is this.categoryId 2}}
            <i class="text-warning fa-solid fa-van-shuttle" style="font-size: 5vw"></i>{{/is}}
            {{#is this.categoryId 3}}
            <i class="text-warning fa-solid fa-face-grin-beam" style="font-size: 5vw"></i>{{/is}}
            {{#is this.categoryId 4}}
            <i class="text-warning fa-solid fa-utensils" style="font-size: 5vw"></i>{{/is}}
            {{#is this.categoryId 5}}
            <i class="text-warning fa-solid fa-pen" style="font-size: 5vw"></i>{{/is}}
          </div>
        </th>

        <td class="pb-3">
          <div style="font-size: 4vw">{{this.name}}</div>
          <div style="font-size: 1vw">{{this.formattedDate}}</div>
        </td>

        <td class="align-middle " style="font-size: 2.3vw">
          <div class="d-flex justify-content-end me-5">
            <span>{{this.amount}}</span>
          </div>
        </td>

        <td class="bg-body align-middle ">
          <a class="text-decoration-none d-flex justify-content-end align-items-center"
            href="./records/{{this._id}}/edit">
            <span class="me-2" style="font-size: 2vw">修改</span>
            <i class="fa-solid fa-file-pen" style="font-size: 2vw"></i>
          </a>
        </td>

        <td class="bg-body align-middle">
          <a href="/records/new" class="text-decoration-none">
            <span class="me-2" style="font-size: 2vw">刪除</span>
            <i class="fa-solid fa-trash-arrow-up" style="font-size: 2vw"></i>
          </a>
        </td>

      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{!-- go to new.hbs --}}
<div class="d-flex justify-content-end my-5">
  <div class="row" style="width: 70%">
    <div class="col-6 d-flex justify-content-center">
      <a class="btn btn-secondary" href="/records/new" style="width: 70%; font-size: 1.5vw">新增支出</a>
    </div>
    <div class="col-6 "></div>
  </div>
</div>